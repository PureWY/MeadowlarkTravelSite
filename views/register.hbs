<div class="main"></div>
    <div class="outScroll">
        <div>
            <div class="header"><img src="img/bird.png"><span>&nbsp;草鹨旅行网</span></div>
            <div class="loginTitle">
                <span>——————&nbsp;&nbsp;</span>注册账户<span>&nbsp;&nbsp;——————</span></div>
            <div class="loginForm">
                <form class="form-horizontal newsUserForm" role="from" action="/register" method="POST">
                <div class="form-group">
                    <div class="col-md-12">
                    <input type="text" class="form-control" name="userName" placeholder="用户名">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                    <input type="password" class="form-control" name="passWord" placeholder="密码">
                    </div>
                </div>
                <div class="form-group">
                  <div class="col-md-12">
                    <input type="password" name="confirmPassWord" class="form-control" placeholder="确认密码">
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">注册</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <!-- href="/login" -->
                    <button type="button" id="toLogin" class="btn btn-info btn-lg btn-block">返回登录</button>
                    </div>
                </div>
                </form>
                <div class="registerWarning"></div>
            </div>
        </div>
    </div>

<script>
  $(document).ready(function(){
    $("button#toLogin").click(function(){
        $(location).attr('href', '/login');
    });
    $(".newsUserForm").on('submit',function(evt){
        evt.preventDefault();
        var action = $(this).attr('action');
        $.ajax({
            url: action, 
            type: 'post', 
            dataType: 'json',
            success:function(data){
			$(".registerWarning").html(data.message);
		},
		error:function(data){
			$(".registerWarning").html(data.message);
		}
    })
});
</script>

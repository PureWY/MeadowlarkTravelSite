<div class="main"></div>
    <div class="outScroll">
        <div>
            <div class="header"><img src="img/bird.png"><span>&nbsp;草鹨旅行网</span></div>
            <div class="loginTitle">
                <span>——————&nbsp;&nbsp;</span>登录账户<span>&nbsp;&nbsp;——————</span></div>
            <div class="loginForm">
                <form class="form-horizontal" role="from" action="/login" method="POST">
                <div class="form-group">
                    <div class="col-md-12">
                    <input type="text" class="form-control" name="userName" placeholder="用户名">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                    <input type="password" class="form-control" name="passWord" placeholder="密码">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                    <div class="checkbox">
                        <label>
                        <input type="checkbox"> 记住密码
                        </label>
                    </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">登录</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                    <button type="button" id="toRegister" class="btn btn-info btn-lg btn-block">立即注册</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
<script>
  $(document).ready(function(){
    $("button#toRegister").click(function(){
      $(location).attr('href', '/register');
    })
});
</script>